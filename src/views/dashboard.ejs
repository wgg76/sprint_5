<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Países</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url("/img/mapa-mundi-esp.webp");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            height: 100vh;
            margin: 0;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.6); /* Fondo translúcido */
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        h1 {
            font-size: 3rem;
            text-align: center;
        }

        .table {
            background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco para la tabla */
            color: black;
            border-radius: 10px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between">
            <h1>Dashboard de Países</h1>
            <div>
                <a href="/add-country" class="btn btn-success">Agregar País</a>
                <a href="/" class="btn btn-secondary">Inicio</a>
            </div>
        </div>
        <hr>

        <h2>Lista de Países</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre Oficial en Español</th>
                    <th>Capital</th>
                    <th>Región</th>
                    <th>Población</th>
                    <th>Área</th>
                    <th>Fronteras</th>
                    <th>Zonas Horarias</th>
                    <th>Creador</th>
                    <th>Modificaciones</th>
                </tr>
            </thead>
            <tbody>
                <% countries.forEach(country => { %>
                    <tr>
                        <td><%= country.nameOfficialSpa %></td>
                        <td><%= country.capital.join(", ") %></td>
                        <td><%= country.region %></td>
                        <td><%= country.population %></td>
                        <td><%= country.area %></td>
                        <td><%= country.borders.join(", ") %></td>
                        <td><%= country.timezones.join(", ") %></td>
                        <td><%= country.creador %></td>
                        <td>
                            <a href="/edit-country/<%= country._id %>" class="btn btn-warning">Editar</a>
                            <form action="/api/countries/<%= country._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este país?');">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
